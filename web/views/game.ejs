<div class="container">
    <div class="row">
        <div class="span8" >
            <%- partial('intro_' + game_name) %>
        </div>
        <div class="span4">
            <div class="well">
              <form action="/arena/<%= game_name %>" method="POST">
                <input type="text" value="Choose an AI id">
                <button type="submit" class="btn btn-primary">Take a try</button>
              </form>
            </div>
            <hr>
            <% if (user) { %>
            <div class="well">
                <h3>Submit your AI</h3>
                <form action="/submit/<%= game_name %>" method="POST" enctype="multipart/form-data">
                  <div class="controls">
                    <select name="lang">
                      <option>C++</option>
                      <option>Java</option>
                    </select>
                  </div>
                  <div class="controls">
                    <input class="input-file" name="code" type="file">
                  </div>
                  <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
                <a class="btn" href="/submit_list/<%= game_name %>/<%= uid %>">View My Submitions</a>
                <a class="btn" href="/match/<%= game_name %>/<%= uid %>">View My Matches</a>
            </div>
            <% } %>
            <div class="well" id="leader-board">
                <h3><%= game_name %> Leader Board</h3>
                <table class="table table-striped">
                <thead><tr>
                  <th>Rank</th>
                  <th>Nick</th>
                  <th>Score</th>
                </tr></thead>
                <tbody>
                  <% ranklist.forEach(function(item, index) { %>
                  <%  if (index <= 4) { %>
                  <tr>
                  <td><%= index + 1 %></td>
                  <td><%= item.user.nick %></td>
                  <td><%= item.score %></td>
                  </tr>
                  <% }}); %>
                </tbody>
                </table>
                <a href="/ranklist/<%= game_name %>">View Full Ranklist</a>
            </div>
        </div>
    </div>
</div>

